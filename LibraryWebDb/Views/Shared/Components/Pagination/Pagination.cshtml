@model PaginationViewModel

<h1>Pagination</h1>

<div class="d-flex justify-content-center mt-4">
	<ul class="pagination">
		@if (Model.CurrentPage > 1)
		{
			<li class="page-item">
				<a class="page-link"
				   asp-action="@Model.Action"
				   asp-controller="@Model.Controller"
				   asp-all-route-data="@Model.RouteParams"
				   asp-route-genreId="@Model.GenreId"
				   asp-route-categoryId="@Model.CategoryId"
				   asp-route-page="@(Model.CurrentPage-1)"
				>Пред.</a>
			</li>
		}

		@for (int i = Model.CurrentPage - Model.PagesLimit; i <= Model.CurrentPage + Model.PagesLimit; i++)
		{
			if (i > 0 && i <=Model.TotalPages)
			{
				<li class="page-item @(i==Model.CurrentPage ? "active" : ' ')">
					<a class="page-link"
					   asp-action="@Model.Action"
					   asp-controller="@Model.Controller"
					   asp-all-route-data="@Model.RouteParams"
					   asp-route-genreId="@Model.GenreId"
					   asp-route-categoryId="@Model.CategoryId"
					   asp-route-page="@i">@i</a>
				</li>
			}
		}

		@if (Model.TotalPages > Model.CurrentPage)
		{
			<li class="page-item">
				<a class="page-link"
				   asp-action="@Model.Action"
				   asp-controller="@Model.Controller"
				   asp-all-route-data="@Model.RouteParams"
				   asp-route-genreId="@Model.GenreId"
				   asp-route-categoryId="@Model.CategoryId"
				   asp-route-page="@(Model.CurrentPage+1)">След.</a>
			</li>
		}
	</ul>
</div>