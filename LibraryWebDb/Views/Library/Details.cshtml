
@{
    ViewData["Title"] = "Details";
}

@model Book

<h1>Подробности</h1>

<div class="card">
    <img src="@Model.ImageUrl" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Category.Name</p>
    </div>
    <ul class="list-group list-group-flush">
        @foreach (var item in @Model.BookGenres)
        {
            <li class="list-group-item">@item.Genre.Name</li>
        }
    </ul>
    <div class="card-body">
        <span class="card-link">@Html.Raw(@Model.Description)</span>
        <a asp-action="Index" asp-controller="Library" class="card-link">Назад</a>
    </div>
</div>